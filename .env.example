# Token que el GPT deberá enviar en Authorization: Bearer <ESTE_TOKEN>
SECRET_TOKEN=pon_aqui_un_token_largo_y_aleatorio

# Config SMTP para enviar emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_usuario@gmail.com
SMTP_PASS=tu_contraseña_o_app_password
SMTP_USE_TLS=true
DEFAULT_FROM=tu_usuario@gmail.com

# Puerto del servidor
PORT=8000

# OpenAI API Key para clasificación de eventos
OPENAI_API_KEY=tu_api_key_de_openai

# Google Sheets (opcional)
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=tu_spreadsheet_id
